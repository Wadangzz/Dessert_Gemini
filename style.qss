/* Main Window */
QMainWindow {
    background-color: #f0f2f5; /* Light grey background */
}

/* Chat Display */
QTextEdit {
    background-color: #ffffff;
    border: 1px solid #dcdfe6;
    border-radius: 8px;
    font-size: 14px;
    padding: 5px;
}

/* Input Field */
QLineEdit {
    background-color: #ffffff;
    border: 1px solid #dcdfe6;
    border-radius: 18px; /* More rounded */
    padding: 10px 15px;
    font-size: 14px;
}
QLineEdit:focus {
    border: 1px solid #409eff; /* Highlight on focus */
}

/* Push Button */
QPushButton {
    background-color: #409eff; /* A nice blue */
    color: white;
    font-weight: bold;
    border: none;
    border-radius: 18px;
    padding: 10px 20px;
    font-size: 14px;
}
QPushButton:hover {
    background-color: #66b1ff; /* Lighter blue on hover */
}
QPushButton:pressed {
    background-color: #3a8ee6; /* Darker blue when pressed */
}

/* Table Widget */
QTableWidget {
    background-color: #ffffff;
    border: 1px solid #e4e7ed;
    border-radius: 8px;
    gridline-color: #e4e7ed;
    font-size: 13px;
    alternate-background-color: #f5f7fa; /* Alternating row color */
}

QHeaderView::section {
    background-color: #f5f7fa; /* Light header background */
    color: #606266;
    padding: 10px;
    border: none;
    font-weight: bold;
    border-bottom: 2px solid #e4e7ed;
}

QTableWidget::item {
    padding: 10px;
    border-bottom: 1px solid #f5f7fa; /* Separator for rows */
}

QTableWidget::item:selected {
    background-color: #d9ecff; /* Selection color */
    color: #333333;
}

/* ScrollBars */
QScrollBar:vertical {
    border: none;
    background: #f5f7fa;
    width: 12px;
    margin: 0px 0px 0px 0px;
}
QScrollBar::handle:vertical {
    background: #dcdfe6;
    min-height: 25px;
    border-radius: 6px;
}
QScrollBar::handle:vertical:hover {
    background: #c0c4cc;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

/* Splitter */
QSplitter::handle {
    background-color: #e4e7ed;
}
QSplitter::handle:horizontal {
    width: 2px;
}
QSplitter::handle:vertical {
    height: 2px;
}
QSplitter::handle:hover {
    background-color: #dcdfe6;
}
